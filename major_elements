public class MajorElement{
    public static void main(String[] args){

        int nums[] = {2,2,1,1,1,2,2};
        System.out.println(MajorElement(nums));

    }


    public static int MajorElement(int[] nums){
        int element = 0;
        int count = 0;

        for(int i = 0; i<nums.length;i++){
            if(count == 0){
                element = nums[i];
            }
            if (element == nums[i]){
                count ++;
            }
            else{
                count --;
            }
        }

        return element;
    }
}
